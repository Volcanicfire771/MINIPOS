@model IEnumerable<POSSystemMVC.Models.PurchaseOrderDetails>

<div style="display:flex;justify-content:space-between;align-items:center;">
    <h2>All Purchase Order Details</h2>
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createPODModal">
        Create POD
    </button>
</div>

<input type="text" placeholder="Search" id="myInput" onkeyup="tableSearch()" class="form-control my-2" />

<table class="table">
    <thead>
        <tr>
            <th>POID</th>
            <th>Branch</th>
            <th>Vendor</th>
            <th>Date</th>
            <th>Product</th>
            <th>Quantity</th>
            <th style="text-align:center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pod in Model)
        {
            <tr id="row-@pod.PurchaseOrderDetailsID">
                <td><span>@pod.PurchaseOrder?.PurchaseOrderID</span></td>
                <td><span>@pod.PurchaseOrder?.Branch?.Name</span></td>
                <td><span>@pod.PurchaseOrder?.Vendor?.Name</span></td>
                <td><span>@pod.PurchaseOrder?.OrderDate</span></td>
                <td><span>@pod.Product?.code</span></td>
                <td><span>@pod.Quantity</span></td>

                <td style="text-align:center;">
                    <button type="button"
                            class="btn btn-sm btn-warning"
                            data-bs-toggle="modal"
                            data-bs-target="#editPODModal"
                            data-id="@pod.PurchaseOrderDetailsID"
                            data-quantity="@pod.Quantity">
                        Edit Quantity
                    </button>

                    <a asp-action="Delete" asp-route-id="@pod.PurchaseOrderDetailsID" class="btn btn-sm btn-danger">Delete</a>

                    <button class="btn btn-sm btn-info details-btn" data-id="@pod.PurchaseOrderDetailsID">
                        Details
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create Modal -->
<div class="modal fade" id="createPODModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Purchase Order Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post">
                    <div class="form-group mb-2">
                        <label for="ProductID">Product</label>
                        <select id="ProductID" name="ProductID" class="form-control" asp-items="ViewBag.Products">
                            <option value="">-- Select Product --</option>
                        </select>
                    </div>

                    <div class="form-group mb-2">
                        <label>Purchase Order</label>
                        <select name="PurchaseOrderID" class="form-control" asp-items="ViewBag.PurchaseOrders"></select>
                    </div>

                    <div class="form-group mb-2">
                        <label for="Quantity">Quantity</label>
                        <input id="Quantity" name="Quantity" type="number" class="form-control" />
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editPODModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Quantity</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="PurchaseOrderDetails" asp-action="Update" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="Edit_POD_ID" name="PurchaseOrderDetailsID" />
                    <div class="form-group mb-2">
                        <label for="Edit_Quantity">Quantity</label>
                        <input id="Edit_Quantity" name="Quantity" type="number" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Save Changes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Purchase Order Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var editModal = document.getElementById("editPODModal");

        editModal.addEventListener("show.bs.modal", function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute("data-id");
            var qty = button.getAttribute("data-quantity");

            document.getElementById("Edit_POD_ID").value = id;
            document.getElementById("Edit_Quantity").value = qty;
        });
    });

    function tableSearch() {
        let input = document.getElementById("myInput");
        let filter = input.value.toUpperCase();
        let table = document.getElementsByClassName("table")[0];
        let tr = table.getElementsByTagName("tr");

        for (let i = 0; i < tr.length; i++) {
            let td = tr[i].getElementsByTagName("td")[3]; // search by Product column
            if (td) {
                let txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }

    document.querySelectorAll('.details-btn').forEach(button => {
        button.addEventListener('click', function () {
            var detailId = this.getAttribute('data-id');
            showDetail(detailId);
        });
    });

    function showDetail(detailId) {
        var row = document.getElementById('row-' + detailId);

        if (row) {
            var cells = row.getElementsByTagName('td');
            var detailsHtml = `
                <div><strong>POID:</strong> ${cells[0].innerText}</div>
                <div><strong>Branch:</strong> ${cells[1].innerText}</div>
                <div><strong>Vendor:</strong> ${cells[2].innerText}</div>
                <div><strong>Product:</strong> ${cells[3].innerText}</div>
                <div><strong>Quantity:</strong> ${cells[4].innerText}</div>
            `;

            document.getElementById('modalBody').innerHTML = detailsHtml;
            var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            modal.show();
        }
    }
</script>
