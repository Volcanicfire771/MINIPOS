@model IEnumerable<POSSystemMVC.Models.SalesOrderDetails>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div style="display:flex;justify-content:space-between;">
    <h2>All Sales Order Details</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        Create SOD
    </button>
</div>

<input type="text" placeholder="Search" id="myInput" onkeyup="tableSearch()" class="form-control my-2" />

<table class="table">
    <thead>
        <tr>
            <th>SOID</th>
            <th>Customer</th>
            <th>Branch</th>
            <th>Date</th>
            <th>Product</th>
            <th>Quantity</th>
            <th style="text-align:center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sod in Model)
        {
            <tr>
                <td>@sod.SalesOrder?.SalesOrderID</td>
                <td>@sod.SalesOrder?.Customer?.Name</td>
                <td>@sod.SalesOrder?.Branch?.Name</td>
                <td>@sod.SalesOrder?.SODate.ToShortDateString()</td>
                <td>@sod.Product?.code</td>
                <td>@sod.Quantity</td>
                <td style="text-align:center;">
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editModal-@sod.SalesOrderDetailsID">
                        Edit
                    </button>
                    <a asp-action="Delete" asp-route-id="@sod.SalesOrderDetailsID" class="btn btn-sm btn-danger">Delete</a>

                    <a class="btn btn-sm btn-info"
                       asp-controller="Invoices"
                       asp-action="Index"
                       asp-route-SalesOrderID="@sod.SalesOrderID">
                        View Invoice
                    </a>

                </td>
            </tr>

            <!-- Edit Modal (only Quantity editable) -->
            <div class="modal fade" id="editModal-@sod.SalesOrderDetailsID" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-controller="SalesOrderDetails" asp-action="Update" method="post">
                            @Html.AntiForgeryToken()
                            <div class="modal-header">
                                <h5 class="modal-title">Edit Quantity</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="SalesOrderDetailsID" value="@sod.SalesOrderDetailsID" />
                                <div class="form-group mb-2">
                                    <label>Quantity</label>
                                    <input type="number" name="Quantity" value="@sod.Quantity" class="form-control" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Save Changes</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="SalesOrderDetails" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Create Sales Order Detail</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-2">
                        <label>Product</label>
                        <select name="ProductID" class="form-control" asp-items="ViewBag.Products"></select>
                    </div>
                    <div class="form-group mb-2">
                        <label>Sales Order</label>
                        <select name="SalesOrderID" class="form-control" asp-items="ViewBag.SalesOrders"></select>
                    </div>
                    <div class="form-group mb-2">
                        <label>Quantity</label>
                        <input type="number" name="Quantity" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function tableSearch(){
        let input = document.getElementById("myInput");
        let filter = input.value.toUpperCase();
        let table = document.getElementsByClassName("table")[0];
        let tr = table.getElementsByTagName("tr");

        for(let i = 0; i < tr.length; i++){
            let td = tr[i].getElementsByTagName("td")[4]; // Product column
            if(td){
                let txtValue = td.textContent || td.innerText;
                if(txtValue.toUpperCase().indexOf(filter) > -1){
                    tr[i].style.display = ""
                } else {
                    tr[i].style.display = "none"
                }
            }
        }
    }
</script>
