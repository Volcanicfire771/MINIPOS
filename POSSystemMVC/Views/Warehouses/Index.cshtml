@model IEnumerable<POSSystemMVC.Models.Warehouse>

<div style="display:flex;justify-content:space-between;">
    <h2>All Warehouses</h2>
    <a class="btn btn-primary" asp-action="Create">Create Warehouse</a>
</div>

<input type="text" placeholder="Search" id="myInput" onkeyup="tableSearch()" />
<table class="table">
    <thead>
        <tr>
            <th>Branch Name</th>
            <th>Name</th>
            <th>Location</th>
            <th style="text-align:center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pod in Model)
        {
            <tr id="row-@pod.WarehouseID">
                <!-- Display Mode -->
                <td class="view-mode">
                    <span>@pod.Branch?.Name</span>
                </td>
                <td class="view-mode">
                    <span>@pod.Name</span>
                </td>
                <td class="view-mode">
                    <span>@pod.Location</span>
                </td>
                

                <!-- Edit Mode -->
                <td class="edit-mode" style="display:none">
                    <select asp-for="@pod.BranchID" class="form-control" asp-items="ViewBag.Branches">
                        <option value="">-- Select branch --</option>
                    </select>
                </td>



                <td class="edit-mode" style="display:none">
                    <input type="text" value="@pod.Name" class="form-control" />
                </td>

                <td class="edit-mode" style="display:none">
                    <input type="text" value="@pod.Location" class="form-control" />
                </td>
                

                <td style="text-align:center;">
                    <!-- Edit/Save -->
                    <button class="btn btn-sm btn-primary edit-btn"
                            data-id="@pod.WarehouseID"
                            onclick="toggleEditMode(@pod.WarehouseID)">
                        Edit
                    </button>
                    <a asp-action="Delete" asp-route-id="@pod.WarehouseID" class="btn btn-sm btn-danger">Delete</a>

                    <!-- Details -->
                    <button class="btn btn-sm btn-info details-btn" data-id="@pod.WarehouseID">
                        Details
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warehouse</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleEditMode(Id) {
        var row = $('#row-' + Id);
        var isEditing = row.find('.edit-mode').is(':visible');

        if (isEditing) {
            save(Id);
        } else {
            row.find('.view-mode').hide();
            row.find('.edit-mode').show();
            row.find('.edit-btn').text('Save').removeClass('btn-primary').addClass('btn-success');
        }
    }

            function save(Id) {
        var row = $('#row-' + Id);
        var Data = {
            WarehouseID: Id, // ✅ correct ID
            BranchID: row.find('.edit-mode:eq(0) select').val(),
            Name: row.find('.edit-mode:eq(1) input').val(), // ✅ input, not select
            Location: row.find('.edit-mode:eq(2) input').val()
        };

        $.ajax({
            url: '@Url.Action("Update", "Warehouses")', // ✅ ensure matches controller name
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(Data),
            success: function () {
                // ✅ update displayed values correctly
                row.find('.view-mode:eq(0) span').text(row.find('.edit-mode:eq(0) select option:selected').text());
                row.find('.view-mode:eq(1) span').text(Data.Name);
                row.find('.view-mode:eq(2) span').text(Data.Location);

                row.find('.edit-mode').hide();
                row.find('.view-mode').show();
                row.find('.edit-btn').text('Edit').removeClass('btn-success').addClass('btn-primary');

                alert('Warehouse updated successfully!');
            },
            error: function (xhr, status, error) {
                console.log('Error:', error, xhr.responseText);
                alert('Error updating warehouse');
            }
        });
    }



    function tableSearch(){
        let input = document.getElementById("myInput");
        let filter = input.value.toUpperCase();
        let table = document.getElementsByClassName("table")[0];
        let tr = table.getElementsByTagName("tr");

        for(let i = 0; i < tr.length; i++){
            let td = tr[i].getElementsByTagName("td")[0];
            if(td){
                let txtValue = td.textContent || td.innerText;
                if(txtValue.toUpperCase().indexOf(filter) > -1){
                    tr[i].style.display = ""
                } else {
                    tr[i].style.display = "none"
                }
            }
        }
    }

    document.querySelectorAll('.details-btn').forEach(button => {
        button.addEventListener('click', function() {
            var detailId = this.getAttribute('data-id');
            showDetail(detailId);
        });
    });

    function showDetail(Id) {
        var row = document.getElementById('row-' + Id);

        if (row) {
            var cells = row.getElementsByTagName('td');
            var Html = `
                <div><strong>ID:</strong> ${Id}</div>
                <div><strong>Branch:</strong> ${cells[0].querySelector('span').textContent}</div>
                <div><strong>Name:</strong> ${cells[1].querySelector('span').textContent}</div>
                <div><strong>Location:</strong> ${cells[2].querySelector('span').textContent}</div>
            `;

            document.getElementById('modalBody').innerHTML = Html;
            var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            modal.show();
        }
    }
</script>
