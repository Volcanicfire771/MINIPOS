@model IEnumerable<POSSystemMVC.Models.SalesOrder>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div style="display:flex;justify-content:space-between;">
    <h2>All Sales Orders</h2>
    <a class="btn btn-primary" asp-action="Index" asp-controller="SalesOrderDetails">All Details</a>

    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        Create SO
    </button>
</div>

<br />
<br />
<form method="get" asp-action="index" style="padding: 10px;">
    <select name="branchID" asp-items="ViewBag.Branches" class="form-control">
        <option value="">Filter by Branch</option>
    </select>

    <select name="customerID" asp-items="ViewBag.Customers" class="form-control">
        <option value="">Filter by Customer</option>
    </select>
    <br />
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<input type="text" placeholder="Search" id="myInput" onkeyup="tableSearch()" />
<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Branch</th>
            <th>Date</th>
            <th style="text-align:center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var so in Model)
        {
            <tr id="row-@so.SalesOrderID">
                <td><span>@so.Customer?.Name</span></td>
                <td><span>@so.Branch?.Name</span></td>
                <td><span>@so.SODate</span></td>
                <td style="text-align:center;">
                    <!-- Edit -->
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editModal-@so.SalesOrderID">
                        Edit
                    </button>
                    <a asp-action="Delete" asp-route-id="@so.SalesOrderID" class="btn btn-sm btn-danger">Delete</a>
                    <a class="btn btn-sm btn-info" asp-controller="SalesOrderDetails" asp-action="Index" asp-route-salesOrderID="@so.SalesOrderID">View Details</a>
                </td>
            </tr>

            <!-- Edit Modal -->
            <div class="modal fade" id="editModal-@so.SalesOrderID" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-controller="SalesOrders" asp-action="Update" method="post">
                            @Html.AntiForgeryToken()
                            <div class="modal-header">
                                <h5 class="modal-title">Edit Sales Order</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="SalesOrderID" value="@so.SalesOrderID" />

                                <div class="form-group mb-2">
                                    <label>Customer</label>
                                    <select name="CustomerID" class="form-control" asp-items="ViewBag.Customers" asp-for="@so.CustomerID"></select>
                                </div>

                                <div class="form-group mb-2">
                                    <label>Branch</label>
                                    <select name="BranchID" class="form-control" asp-items="ViewBag.Branches" asp-for="@so.BranchID"></select>
                                </div>

                                <div class="form-group mb-2">
                                    <label>Date</label>
                                    <input type="date" name="SODate" value="@so.SODate.ToString("yyyy-MM-dd")" class="form-control" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Save Changes</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="SalesOrders" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Create Sales Order</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-2">
                        <label>Customer</label>
                        <select name="CustomerID" class="form-control" asp-items="ViewBag.Customers"></select>
                    </div>

                    <div class="form-group mb-2">
                        <label>Branch</label>
                        <select name="BranchID" class="form-control" asp-items="ViewBag.Branches"></select>
                    </div>

                    <div class="form-group mb-2">
                        <label>Date</label>
                        <input type="date" name="SODate" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function tableSearch(){
        let input = document.getElementById("myInput");
        let filter = input.value.toUpperCase();
        let table = document.getElementsByClassName("table")[0];
        let tr = table.getElementsByTagName("tr");

        for(let i = 0; i < tr.length; i++){
            let td = tr[i].getElementsByTagName("td")[0];
            if(td){
                let txtValue = td.textContent || td.innerText;
                if(txtValue.toUpperCase().indexOf(filter) > -1){
                    tr[i].style.display = ""
                } else {
                    tr[i].style.display = "none"
                }
            }
        }
    }
</script>
