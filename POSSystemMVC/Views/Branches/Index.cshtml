@model IEnumerable<POSSystemMVC.Models.Branch>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div style="display:flex;justify-content:space-between;">
    <h2>All Branches</h2>
    <a class="btn btn-primary" asp-action="Create">Create Branch</a>
</div>

<input type="text" placeholder="Search" id="myInput" onkeyup="tableSearch()" />
<table class="table">
    <thead>
        <tr>
            @* <th>Product Name</th> *@
            <th>Name</th>
            <th>Location</th>
            <th style="text-align:center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var modell in Model)
        {
            <tr id="row-@modell.BranchID">
                <!-- Display Mode -->
                <td class="view-mode">
                    <span>@modell.Name</span>
                </td>
                <td class="view-mode">
                    <span>@modell.Location</span>
                </td>

                

                <!-- Edit Mode (hidden initially) -->
                <td class="edit-mode" style="display:none">
                    <input type="text" value="@modell.Name" class="form-control" />
                </td>
                <td class="edit-mode" style="display:none">
                    <input type="text" value="@modell.Location" class="form-control" />
                </td>
               
                
                <td style="text-align:center;">
                    <!-- Edit/Save Button -->
                    <button class="btn btn-sm btn-primary edit-btn"
                            data-id="@modell.BranchID"
                            onclick="toggleEditMode(@modell.BranchID)">
                        Edit
                    </button>
                    <a asp-action="Delete" asp-route-id="@modell.BranchID" class="btn btn-sm btn-danger">Delete</a>


                    <!-- Details Button -->
                    <button class="btn btn-sm btn-info details-btn" data-id="@modell.BranchID">
                        Details
                    </button>
                    
                   >
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Branch Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Details will be inserted here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>
        function toggleEditMode(branchID) {
            console.log("Edit clicked for branch:", branchID);
            var row = $('#row-' + branchID);
        var isEditing = row.find('.edit-mode').is(':visible');

        if (isEditing) {
                save(branchID);
        } else {
            row.find('.view-mode').hide();
            row.find('.edit-mode').show();
            row.find('.edit-btn').text('Save').removeClass('btn-primary').addClass('btn-success');
        }
    }

        function save(branchID) {
            console.log("Saving branch:", branchID);
            var row = $('#row-' + branchID);
            var branchData = {
            BranchID: branchID,
            Name: row.find('.edit-mode:eq(0) input').val(),
            Location: row.find('.edit-mode:eq(1) input').val(),
        };

            console.log('Data:', branchData);

        $.ajax({
            url: '@Url.Action("Update", "Branches")', 
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(branchData),
            success: function () {
                row.find('.view-mode:eq(0) span').text(branchData.Name);
                    row.find('.view-mode:eq(1) span').text(branchData.Location);
                row.find('.edit-mode').hide();
                row.find('.view-mode').show();
                row.find('.edit-btn').text('Edit').removeClass('btn-success').addClass('btn-primary');

                alert('Branch updated successfully!');
            },
            error: function (xhr, status, error) {
                console.log('Error:', error, xhr.responseText);
                alert('Error updating branch');
            }
        });
    }


function tableSearch(){
       let input, table, filter, tr, td, i, txtValue;

       //initializing variables
       input = document.getElementById("myInput");
       filter = input.value.toUpperCase();
       table = document.getElementsByClassName("table")[0];
       tr = table.getElementsByTagName("tr");

           
       for(let i = 0; i < tr.length; i++){
           td = tr[i].getElementsByTagName("td")[0];
           if(td){
               txtValue = td.textContent || td.innerText;
               if(txtValue.toUpperCase().indexOf(filter) > -1){
                   tr[i].style.display = ""
               }
               else{
                   tr[i].style.display = "none"

               }
           }
       }

}


</script>

<script>
    // Bootstrap version
    document.querySelectorAll('.details-btn').forEach(button => {
        button.addEventListener('click', function() {
            var branchID = this.getAttribute('data-id');
            showDetails(branchID);
        });
    });

    function showDetails(branchID) {
        var row = document.getElementById('row-' + branchID);

        if (row) {
            var cells = row.getElementsByTagName('td');
            var detailsHtml = `

                <div class="detail-item">
                    <strong>Branch ID:</strong> ${branchID}
                </div>

                <div class="detail-item">
                    <strong>Name:</strong> ${cells[0].querySelector('span').textContent}
                </div>
                <div class="detail-item">
                    <strong>Location:</strong> ${cells[1].querySelector('span').textContent}
                </div>
                
                
            `;

            document.getElementById('modalBody').innerHTML = detailsHtml;

            // Show Bootstrap modal
            var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            modal.show();
        }
    }
</script>
