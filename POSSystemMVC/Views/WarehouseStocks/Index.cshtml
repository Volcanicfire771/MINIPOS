@model IEnumerable<POSSystemMVC.Models.WarehouseStock>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div style="display:flex;justify-content:space-between;">
    <h2>All Warehouse Stocks</h2>
    @* <a class="btn btn-primary" asp-action="Create">Create Stock</a> *@
</div>

<input type="text" placeholder="Search" id="myInput" onkeyup="tableSearch()" />
<table class="table">
    <thead>
        <tr>
            <th>Warehouse</th>
            <th>Product</th>
            <th>Quantity</th>
            <th style="text-align:center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pod in Model)
        {
            <tr id="row-@pod.WarehouseStockID">
                <!-- Display Mode -->
                <td class="view-mode">
                    <span>@pod.Warehouse?.Name</span>
                </td>
                <td class="view-mode">
                    <span>@pod.Product?.code</span>
                </td>
                <td class="view-mode">
                    <span>@pod.Quantity</span>
                </td>

                
                

                <td style="text-align:center;">
                    <!-- Edit/Save -->
                    <button class="btn btn-sm btn-primary edit-btn"
                            data-id="@pod.WarehouseStockID"
                            onclick="toggleEditMode(@pod.WarehouseStockID)">
                        Edit
                    </button>
                    <a asp-action="Delete" asp-route-id="@pod.WarehouseStockID" class="btn btn-sm btn-danger">Delete</a>

                    <!-- Details -->
                    <button class="btn btn-sm btn-info details-btn" data-id="@pod.WarehouseStockID">
                        Details
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Stock Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleEditMode(Id) {
        var row = $('#row-' + Id);
        var isEditing = row.find('.edit-mode').is(':visible');

        if (isEditing) {
            save(Id);
        } else {
            row.find('.view-mode').hide();
            row.find('.edit-mode').show();
            row.find('.edit-btn').text('Save').removeClass('btn-primary').addClass('btn-success');
        }
    }

            function save(Id) {
        var row = $('#row-' + Id);
        var Data = {
            WarehouseStockID: Id, 
            WarehouseID: row.find('.edit-mode:eq(0) select').val(),
            ProductID: row.find('.edit-mode:eq(1) select').val(),
            Quantity: row.find('.edit-mode:eq(2) input').val()
        };

        $.ajax({
            url: '@Url.Action("Update", "WarehouseStocks")', 
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(Data),
            success: function () {
                
                row.find('.view-mode:eq(0) span').text(row.find('.edit-mode:eq(0) select option:selected').text());
                row.find('.view-mode:eq(1) span').text(row.find('.edit-mode:eq(1) select option:selected').text());
                row.find('.view-mode:eq(2) span').text(Data.Quantity);

                row.find('.edit-mode').hide();
                row.find('.view-mode').show();
                row.find('.edit-btn').text('Edit').removeClass('btn-success').addClass('btn-primary');

                alert('Stock updated successfully!');
            },
            error: function (xhr, status, error) {
                console.log('Error:', error, xhr.responseText);
                alert('Error updating warehouse');
            }
        });
    }



    function tableSearch(){
        let input = document.getElementById("myInput");
        let filter = input.value.toUpperCase();
        let table = document.getElementsByClassName("table")[0];
        let tr = table.getElementsByTagName("tr");

        for(let i = 0; i < tr.length; i++){
            let td = tr[i].getElementsByTagName("td")[0];
            if(td){
                let txtValue = td.textContent || td.innerText;
                if(txtValue.toUpperCase().indexOf(filter) > -1){
                    tr[i].style.display = ""
                } else {
                    tr[i].style.display = "none"
                }
            }
        }
    }

    document.querySelectorAll('.details-btn').forEach(button => {
        button.addEventListener('click', function() {
            var Id = this.getAttribute('data-id');
            showDetail(Id);
        });
    });

    function showDetail(Id) {
        var row = document.getElementById('row-' + Id);

        if (row) {
            var cells = row.getElementsByTagName('td');
            var Html = `
                <div><strong>ID:</strong> ${Id}</div>
                <div><strong>Warehouse:</strong> ${cells[0].querySelector('span').textContent}</div>
                <div><strong>Product:</strong> ${cells[1].querySelector('span').textContent}</div>
                <div><strong>Quantity:</strong> ${cells[2].querySelector('span').textContent}</div>
            `;

            document.getElementById('modalBody').innerHTML = Html;
            var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            modal.show();
        }
    }
</script>
