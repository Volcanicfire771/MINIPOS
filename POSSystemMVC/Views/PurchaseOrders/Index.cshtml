@model IEnumerable<POSSystemMVC.Models.PurchaseOrder>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h2>Purchase Orders</h2>
<a class="btn btn-primary" asp-action="Index" asp-controller="PurchaseOrderDetails">All Details</a>

<br />
<br />
<form method="get" asp-action="Index" style="padding: 10px;">
    <select name="branchID" asp-items="ViewBag.Branches" class="form-control">
        <option value="">Filter by Branch</option>
    </select>

    <select name="vendorID" asp-items="ViewBag.Vendors" class="form-control">
        <option value="">Filter by Vendor</option>
    </select>
    <br />
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<!-- Create Button -->
<button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#createPurchaseOrderModal">
    New Order
</button>

<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Branch</th>
            <th>Order Date</th>
            <th>Vendor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.PurchaseOrderID</td>
                <td>@order.Branch?.Name</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Vendor?.Name</td>
                <td>
                    <a class="btn btn-sm btn-info"
                       asp-controller="PurchaseOrderDetails"
                       asp-action="Index"
                       asp-route-purchaseOrderID="@order.PurchaseOrderID">
                        View Details
                    </a>

                    <a asp-action="Delete" asp-route-id="@order.PurchaseOrderID" class="btn btn-sm btn-danger">Delete</a>


                    <button type="button"
                            class="btn btn-sm btn-warning"
                            data-bs-toggle="modal"
                            data-bs-target="#editPurchaseOrderModal"
                            data-id="@order.PurchaseOrderID"
                            data-branch="@order.BranchID"
                            data-vendor="@order.VendorID"
                            data-date="@order.OrderDate.ToString("yyyy-MM-dd")">
                        Edit
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create Modal -->
<div class="modal fade" id="createPurchaseOrderModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Purchase Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post">
                    <div class="form-group mb-2">
                        <label for="BranchID">Branch</label>
                        <select id="BranchID" name="BranchID" class="form-control" asp-items="ViewBag.Branches">
                            <option value="">-- Select Branch --</option>
                        </select>
                    </div>

                    <div class="form-group mb-2">
                        <label for="VendorID">Vendor</label>
                        <select id="VendorID" name="VendorID" class="form-control" asp-items="ViewBag.Vendors">
                            <option value="">-- Select Vendor --</option>
                        </select>
                    </div>

                    <div class="form-group mb-2">
                        <label for="OrderDate">Order Date</label>
                        <input id="OrderDate" name="OrderDate" class="form-control" type="date" />
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editPurchaseOrderModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Purchase Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" method="post">
                    <input type="hidden" id="Edit_PurchaseOrderID" name="PurchaseOrderID" />

                    <div class="form-group mb-2">
                        <label for="Edit_BranchID">Branch</label>
                        <select id="Edit_BranchID" name="BranchID" class="form-control" asp-items="ViewBag.Branches">
                            <option value="">-- Select Branch --</option>
                        </select>
                    </div>

                    <div class="form-group mb-2">
                        <label for="Edit_VendorID">Vendor</label>
                        <select id="Edit_VendorID" name="VendorID" class="form-control" asp-items="ViewBag.Vendors">
                            <option value="">-- Select Vendor --</option>
                        </select>
                    </div>

                    <div class="form-group mb-2">
                        <label for="Edit_OrderDate">Order Date</label>
                        <input id="Edit_OrderDate" name="OrderDate" class="form-control" type="date" />
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Save Changes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var editModal = document.getElementById("editPurchaseOrderModal");

        editModal.addEventListener("show.bs.modal", function (event) {
            var button = event.relatedTarget;

            var id = button.getAttribute("data-id");
            var branch = button.getAttribute("data-branch");
            var vendor = button.getAttribute("data-vendor");
            var date = button.getAttribute("data-date");

            document.getElementById("Edit_PurchaseOrderID").value = id;
            document.getElementById("Edit_BranchID").value = branch;
            document.getElementById("Edit_VendorID").value = vendor;
            document.getElementById("Edit_OrderDate").value = date;
        });
    });
</script>
